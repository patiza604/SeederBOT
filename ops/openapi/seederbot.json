{
  "openapi": "3.1.0",
  "info": {
    "title": "SeederBot API",
    "description": "Secure FastAPI service for triggering media searches via ChatGPT webhook",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "https://your-domain.com",
      "description": "Production server"
    }
  ],
  "paths": {
    "/grab": {
      "post": {
        "summary": "Trigger media search and download",
        "description": "Search for and download a movie using configured media management tools",
        "operationId": "grabMedia",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GrabRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GrabResponse"
                }
              }
            }
          },
          "401": {
            "description": "Authentication required"
          },
          "500": {
            "description": "Internal server error"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "GrabRequest": {
        "type": "object",
        "required": ["title"],
        "properties": {
          "title": {
            "type": "string",
            "description": "Movie title to search for",
            "example": "Inception 2010"
          },
          "type": {
            "type": "string",
            "enum": ["movie"],
            "default": "movie",
            "description": "Content type"
          },
          "year": {
            "type": "integer",
            "description": "Optional year to help disambiguation",
            "example": 2010
          }
        }
      },
      "GrabResponse": {
        "type": "object",
        "required": ["status", "message"],
        "properties": {
          "status": {
            "type": "string",
            "description": "Success or error status",
            "example": "success"
          },
          "message": {
            "type": "string",
            "description": "Human readable message",
            "example": "Successfully added Inception (2010) to download queue"
          },
          "details": {
            "type": "object",
            "description": "Additional response details"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "description": "Bearer token authentication"
      }
    }
  }
}